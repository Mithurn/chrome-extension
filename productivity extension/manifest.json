{
    "manifest_version": 3,
    "name": "Productivity Tracker",
    "version": "1.0",
    "description": "Tracks time spent on websites and helps boost productivity by limiting access.",
    "permissions": ["activeTab", "tabs", "storage", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }

  